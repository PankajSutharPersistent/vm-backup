	<script src="lib/mustache.js"></script>
	<script id="temp" type="template/persistent">
		<div class='product'>
			<h1>{{title}}</h1>
			<img  src='{{photo}}' />
			<input type='range' value='{{power}}' min='0' max='10' />
			<h4> <span>{{firstname}}</span> <span>{{lastname}}</span></h4>
			<h3> {{city}} </h3>
		</div>
	</script>
	<style>
		.box{
			width: 810px;
			height: 260px;
			background-color: #333333;
			color: white;
			font-family: arial;
			text-align: justify;
