<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<title>Ajax</title>
	<style>
		.box{
			width: 900px;
			height: 500px;
			background-color: #333333;
			color: white;
			font-family: arial;
			text-align: justify;
			padding: 5px;
			overflow: auto;
			margin: auto;
		}
		button{
			width: 450px;
			margin: 10px auto;
			display: block;
			padding: 5px;			
		}
		.product{
			width: 150px;
			background-color: #666666;
			float:  left;
		}
	
		.product h1,h4,h3{
			margin: 0px;
			background-color: silver;
			color: #333333;
			font-family: arial;
			text-align: center;
		}
		.product img{
			width: 100%;
		}
		.product input{
			width: 97%;
		}
	</style>
	<script>
	/*
	 * XMLP
	 * JSONP
	 */
		var xhr = new XMLHttpRequest();
			// xhr.onreadystatechange;
			xhr.addEventListener("readystatechange", changeHandler)
		window.onload = function(){
			document
			.querySelector("button")
			.addEventListener("click", clickHandler);
		};
		function clickHandler(){
			xhr.open("get","data/data.xml", true);
			// xhr.open("get","http://www.w3schools.com/xml/cd_catalog.xml", true);
			xhr.send();
		}
		function changeHandler(){
			if(xhr.readyState == 4 && xhr.status == 200){				
			console.log(xhr.readyState);
			// document.getElementsByClassName("box")[0].innerHTML += xhr.responseXML+" : "+xhr.readyState+"<hr/>";
			var data = xhr.responseXML;
			var value = data.getElementsByTagName("hero");
			// document.getElementsByClassName("box")[0].innerHTML += value[0].firstChild.nodeValue;
			//var cb = document.getElementById("cb");
			var box=document.getElementsByClassName("box")[0];
			
			for(var i = 0; i < value.length; i++ ){
				var title=data.getElementsByTagName("title")[i].textContent;
				var fn=data.getElementsByTagName("firstname")[i].textContent;
				var ln=data.getElementsByTagName("lastname")[i].textContent;
				var city=data.getElementsByTagName("city")[i].textContent;
				var power=data.getElementsByTagName("power")[i].textContent;
				var photo=data.getElementsByTagName("photo")[i].textContent;
					//cb.innerHTML+="<option>"+value[i].textContent+"</option>"
					box.innerHTML+="<div class='product'><h1>"+ title+"<img src='"+photo+"' /><input type='range' value='"+power+"' min='0' max='10' /><h4> <span>"+fn+"</span> <span>"+ln+"</span></h4><h3> "+city+"</h3></h1></div>"
				}
			}
		}
	</script>
</head>
